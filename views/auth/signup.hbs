<div class="bgLog">
<div class="formSign">

<h1>Sign Up</h1>


<div>
<form id="form" action="/auth/signup" method="POST">

 
  <input class="logInput" type="text" name="username" placeholder="Username" />

  <input class="logInput" type="password" name="password" placeholder="Password" />
  <input class="logInput" type="number" name="weight" placeholder="Weight"/>
  <input class="logInput" type="number" name="size" placeholder="Size" />
  
    <label class="logInput" for="level">Workout-level</label> 
    <select class="logInput" id="level" name="level" form="level">
    <option value="Beginner">Beginner</option>
    <option value="Intermediate">Intermediate</option>
    <option value="Professional">Professional</option>
    </select>

  {{#if message}}
  <div class="error-message">{{message}}</div>
  {{/if}}

  <button class="logInput" type="submit">Sign up</button>
  <button class="logInput"> <a  href="/">Login</a> </button>
  
</form>

</div>
</div>
</div>